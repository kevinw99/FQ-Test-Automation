{
  "name": "fintech-test-automation",
  "version": "1.0.0",
  "description": "Test automation framework for fintech microservices",
  "scripts": {
    "test": "playwright test --project=chromium",
    "test:all": "playwright test",
    "test:api": "playwright test tests/api/ --project=api-tests",
    "test:ui": "playwright test tests/ui/ --project=chromium",
    "test:ui:all": "playwright test tests/ui/",
    "test:ui:firefox": "playwright test tests/ui/ --project=firefox",
    "test:ui:webkit": "playwright test tests/ui/ --project=webkit",
    "test:ui:headed": "playwright test tests/ui/ --project=chromium --headed",
    "test:ui:debug": "playwright test tests/ui/ --project=chromium --debug",
    "test:ui:step": "playwright test tests/ui/ --project=chromium --headed --slowMo=1000",
    "test:ui:interactive": "playwright test tests/ui/ --project=chromium --headed --slowMo=2000 --max-failures=1",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "install:browsers": "playwright install",
    "servers:start": "./start-microservices.sh",
    "servers:stop": "pkill -f 'node server.js' 2>/dev/null || true",
    "servers:restart": "npm run servers:stop && sleep 2 && npm run servers:start",
    "test:fresh": "npm run servers:restart && sleep 5 && npm run test",
    "test:api:fresh": "npm run servers:restart && sleep 5 && npm run test:api",
    "test:all:fresh": "npm run servers:restart && sleep 5 && npm run test:all"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "axios": "^1.12.2",
    "dotenv": "^16.3.1"
  }
}
